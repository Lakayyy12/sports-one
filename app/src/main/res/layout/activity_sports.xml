<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".SportsActivity">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="#FF6D00"
        android:contentDescription="@string/back_button"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPORTS MENU"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textSize="40dp"
        android:textColor="#FF6D00"
        android:textStyle="bold"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/gridlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="30dp"
                android:columnCount="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Basketball"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Baseball" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Football"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="E Sports"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Soccer"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Hand Ball"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Ice Hockey"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:textSize="12dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Table Tennis"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Tennis"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn10"
                    android:layout_width="132dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#60E849"
                    android:background="@drawable/roundedbutton"
                    app:backgroundTint="#FFD600"
                    android:text="Volleyball"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </GridLayout>

            <ImageView
                android:id="@+id/im1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/gridlayout"
                android:layout_marginTop="0dp"
                android:background="@drawable/customborder2"
                android:scaleType="fitXY"
                android:src="@drawable/banner2" />

            <Button
                android:id="@+id/fact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/im1"
                android:layout_centerInParent="true"
                android:background="@drawable/roundedbutton"
                app:backgroundTint="#FFD600"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="FACTS"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>